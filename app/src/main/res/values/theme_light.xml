    </style>

    <style name="AppbarThemeLight" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="PopupMenuLight" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/light_window_background</item>
    </style>

    <style name="PopupThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/light_window_background</item>
    </style>

    <style name="ContextPopupThemeLight" parent="PopupThemeLight">
        <item name="android:popupBackground">@color/light_window_background</item>
        <!--
         ~  Context menu of a RecyclerView is displayed in the wrong location when setting
         ~  a contextPopupMenuStyle on Android N, set bellow can fix it.
        -->
        <item name="android:overlapAnchor">true</item>
    </style>

    <!-- Material 3 Component Styles for Light Theme -->

    <!-- Card View -->
    <style name="Widget.OpenHub.Material3.CardView.Light" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/light_card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Button -->
    <style name="Widget.OpenHub.Material3.Button.Light" parent="Widget.Material3.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Widget.OpenHub.Material3.Button.TextButton.Light" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.OpenHub.Material3.Button.TonalButton.Light" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- FAB -->
    <style name="Widget.OpenHub.Material3.FAB.Light" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.OpenHub.Material3.FAB</item>
    </style>

    <!-- Chip -->
    <style name="Widget.OpenHub.Material3.Chip.Light" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- Text Input Layout -->
    <style name="Widget.OpenHub.Material3.TextInputLayout.Light" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- Bottom Sheet Dialog -->
    <style name="ThemeOverlay.OpenHub.Material3.BottomSheetDialog.Light" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.OpenHub.Material3.BottomSheet.Light</item>
    </style>

    <style name="Widget.OpenHub.Material3.BottomSheet.Light" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.OpenHub.Material3.BottomSheet</item>
        <item name="backgroundTint">@color/light_card_background</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.OpenHub.Material3.Dialog.Alert.Light" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearance.OpenHub.Material3.SettingsDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.OpenHub.Material3.Dialog.Title</item>
    </style>

    <!-- Material 3 Extended FAB -->
    <style name="Widget.OpenHub.Material3.ExtendedFAB.Light" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.OpenHub.Material3.FAB</item>
    </style>

