<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_700"
    android:gravity="center_horizontal"
    android:padding="@dimen/activity_margin"
    tools:context=".ui.activity.LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_normal"
        android:minHeight="380dp"
        android:minWidth="250dp"
        app:cardElevation="@dimen/spacing_large"
        app:cardCornerRadius="16dp"
        android:background="?card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="@dimen/spacing_normal"
                android:src="@mipmap/logo"
                android:background="@color/amoled_dark_card_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:background="@color/dark_color_primary"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingRight="@dimen/spacing_normal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pat_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:hint="@string/personal_access_token_hint"
                    app:hintTextColor="@color/text_color_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pat_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_color_light"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.unstoppable.submitbuttonview.SubmitButton
                    android:id="@+id/login_pat_bn"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    app:buttonColor="@color/light_card_background"
                    app:buttonText="@string/login_with_pat"
                    app:buttonTextSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
