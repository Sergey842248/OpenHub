<?xml version="1.0" encoding="utf-8"?>
<!--
  ~ Material 3 Preference Category Layout
  ~ Implements Material Expressive design with rounded corners
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_expressive_medium"
    android:paddingEnd="@dimen/spacing_expressive_medium"
    android:paddingTop="@dimen/spacing_expressive_large"
    android:paddingBottom="@dimen/spacing_expressive_small">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:letterSpacing="0.01"
        tools:text="Category Title" />

</LinearLayout>
